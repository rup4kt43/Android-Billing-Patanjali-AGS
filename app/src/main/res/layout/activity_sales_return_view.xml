<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".salse_return_component.view.SalesReturnView">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="horizontal"

        android:paddingTop="5dp"
        android:paddingBottom="5dp">


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_text_background"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="10dp"

                android:layout_width="0dp"
                android:paddingTop="@dimen/buttonPadding"
                android:paddingBottom="@dimen/buttonPadding"
                android:layout_height="wrap_content"
                android:layout_weight="0.4">
                <Spinner

                    android:backgroundTint="@android:color/white"
                    android:id="@+id/spn_billType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </LinearLayout>

            <EditText
                android:inputType="number"
                android:background="@drawable/edit_text_background"
                android:id="@+id/et_billNo"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="0.2"
                android:layout_height="match_parent"
                android:layout_margin="5dp"

                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />
            <TextView
                android:gravity="center"
                android:id="@+id/et_division"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:textSize="10dp"





                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                android:text="AAA"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />
            <TextView
                android:textSize="10dp"
                android:gravity="center"
                android:id="@+id/et_phiscal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"





                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                android:text="2021"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />


        </LinearLayout>



        <Button

            android:id="@+id/btn_load"

            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"

            android:backgroundTint="@android:color/white"
            android:text="Load"
            android:textColor="@color/colorPrimary" />




    </LinearLayout>





    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="10dp"
        android:paddingTop="10dp"
        android:visibility="gone"
        app:tabIndicatorColor="#e5e4e2"
        app:tabIndicatorHeight="4dp"

        app:tabSelectedTextColor="@android:color/white"
        app:tabTextColor="#f4f0ec"

        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/mainPageMargin" />


</LinearLayout>