<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="@dimen/padding_10">


    <RelativeLayout
        android:id="@+id/tab"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/padding_45">

        <com.smartpeak.functions.MyTextView
            android:id="@+id/title_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:singleLine="true"
            android:text="Additional Settings"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_text_size" />

        <TextView
            android:id="@+id/txtBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/padding_10"
            android:background="@drawable/ic_action_cancel"
            android:visibility="visible" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/llfieldscreen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_100"
        android:layout_below="@+id/tab"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/datePickerLayout"
            android:layout_width="@dimen/padding_260"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_15"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/EtvAmnt"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/padding_50"
                android:layout_centerInParent="true"
                android:background="@null"
                android:gravity="center"
                android:hint="Enter your password"
                android:singleLine="true"
                android:textColor="@color/header_text"
                android:textColorHint="@color/header_text"
                android:textSize="@dimen/normal_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_1"
                android:layout_below="@+id/EtvAmnt"
                android:background="#000"></View>
        </RelativeLayout>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/resendsRefundButtonsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llfieldscreen"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtBack1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#426A9A"
            android:gravity="center"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtConfirm"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/rounded_button_with_dblue_background"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_10"
            android:paddingTop="@dimen/padding_10"
            android:text="Confirm"
            android:textColor="#ffffff"
            android:textSize="@dimen/sub_header_text_size"
            android:textStyle="normal" />
    </LinearLayout>
</RelativeLayout>