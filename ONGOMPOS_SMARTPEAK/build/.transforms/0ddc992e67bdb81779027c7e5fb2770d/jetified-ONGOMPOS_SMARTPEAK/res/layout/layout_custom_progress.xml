<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <View
        android:id="@+id/Vbackground"
        android:layout_width="@dimen/padding_290"
        android:layout_height="@dimen/padding_290"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/padding_20"
        android:background="@drawable/dialog_custome_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Tvdialogmesssage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Processing..."
            android:gravity="center"
            android:textIsSelectable="false"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_text_size" />

        <ImageView
            android:id="@+id/progress_image"
            android:layout_width="@dimen/padding_120"
            android:layout_height="@dimen/padding_100"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_gravity="center_horizontal"
            android:src ="@drawable/progress_request_server"/>
    </LinearLayout>


</RelativeLayout>