<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/Rlreceipt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background_with_transparent_color">


        <RelativeLayout
            android:id="@+id/Llsignpanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">


            <include
                android:id="@+id/Ivxyz"
                layout="@layout/receipt_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="@dimen/padding_10"
                android:src="@drawable/indiatransact1" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Ivxyz">

                <RelativeLayout
                    android:id="@+id/Llsignpanel1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#ffffff">

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/TvMname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="NIDHI COMMUNICATION"
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/sub_header_text_size" />

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/Tvlocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/TvMname"
                        android:layout_centerHorizontal="true"
                        android:text="Location"
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/normal_text_size" />

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/Tvcity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Tvlocation"
                        android:layout_centerHorizontal="true"
                        android:text="City"
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/normal_text_size" />

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/Tvtrantype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Tvcity"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="15dp"
                        android:text="Sale"
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/normal_text_size" />

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/TvTC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/Tvtrantype"
                        android:text=""
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10" />

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/TvAPPLname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/TvTC"
                        android:text="APPL NAME: "
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10" />

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/TvAID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/TvAPPLname"
                        android:layout_alignParentRight="true"
                        android:text="AID: "
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10" />

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/TvTVR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/TvAPPLname"
                        android:text="TVR: "
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10" />

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/TvTSI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/TvTVR"
                        android:layout_alignParentRight="true"
                        android:text="TSI: "
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10" />

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/TvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/TvTVR"
                        android:text="DATE:"
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10" />

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/TvRrn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/TvDate"
                        android:layout_alignParentRight="true"
                        android:text="RRN:"
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10" />

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/TvMid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/TvDate"
                        android:text="MId:"
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10" />

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/TvInvoiceNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/TvMid"
                        android:text="INVOICE NO:"
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10" />

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/TvTid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/TvDate"
                        android:text="TId:"
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10" />

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/TvBatchno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/TvTid"
                        android:text="Batch No:"
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10" />


                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/TvAuthCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/TvBatchno"
                        android:text="AUTH CODE:"
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10" />

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/TvAdditionalData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/TvAuthCode"
                        android:text=""
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10"
                        android:visibility="gone" />

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/TvCardno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/TvSENumber"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="CARD : "
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10"/>

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/TvSwipeOrChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/TvCardType"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:text=""
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10"/>

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/TvCardType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/TvBatchno"
                        android:text=""
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10" />

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/TvSENumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/TvCardType"
                        android:text=""
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10"/>


                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/TvAddData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/TvSENumber"
                        android:text=""
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10"  />


                    <RelativeLayout
                        android:id="@id/mainLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/TvCardno"
                        android:layout_margin="10dp"
                        android:background="@color/dim_foreground_disabled_material_dark"
                        android:padding="@dimen/padding_10">

                        <RelativeLayout
                            android:id="@+id/RlAmount"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp">

                            <com.smartpeak.functions.MyTextView
                                android:id="@+id/TvAmnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="BASE AMOUNT : "
                                android:textColor="@android:color/black"
                                android:textSize="15dp"/>

                            <TextView
                                android:id="@+id/Ivrupee1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/padding_5"
                                android:layout_toLeftOf="@+id/TvAmnt1"
                                android:src="@drawable/ic_rupees_symbol"
                                android:text="INR"
                                android:textColor="#000"
                                android:textSize="15dp"/>

                            <com.smartpeak.functions.MyTextView
                                android:id="@+id/TvAmnt1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textSize="15dp" />

                            <com.smartpeak.functions.MyTextView
                                android:id="@+id/TvTip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_below="@+id/TvAmnt"
                                android:layout_marginTop="5dp"
                                android:text="TIP AMOUNT : "
                                android:textColor="@android:color/black"
                                android:textSize="15dp"
                                android:visibility="visible" />

                            <com.smartpeak.functions.MyTextView
                                android:id="@+id/TvTip1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/TvAmnt"
                                android:layout_marginTop="5dp"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textSize="15dp"
                                android:visibility="visible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/TvAmnt"
                                android:layout_marginRight="@dimen/padding_5"
                                android:layout_marginTop="5dp"
                                android:layout_toLeftOf="@+id/TvTip1"
                                android:src="@drawable/ic_rupees_symbol"
                                android:text="INR"
                                android:textColor="#000"
                                android:visibility="visible"
                                android:textSize="15dp"/>


                            <View
                                android:id="@+id/amntline1"
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/TvTip"
                                android:layout_marginTop="2dp"
                                android:layout_toRightOf="@+id/TvTip"
                                android:background="@android:color/black"
                                android:visibility="gone" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/relativeLayout1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/RlAmount"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <com.smartpeak.functions.MyTextView
                                android:id="@+id/TvTotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TOTAL AMOUNT:"
                                android:textColor="@android:color/black"
                                android:textSize="15dp" />


                            <TextView
                                android:id="@+id/Ivrupee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/padding_5"
                                android:layout_toLeftOf="@+id/TvTotal1"
                                android:src="@drawable/ic_rupees_symbol"
                                android:text="INR"
                                android:textColor="#000"
                                android:textSize="15dp"/>


                            <com.smartpeak.functions.MyTextView
                                android:id="@+id/TvTotal1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignTop="@+id/TvTotal"
                                android:textColor="@android:color/black"
                                android:textSize="15dp" />

                            <View
                                android:id="@+id/amntline2"
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/TvTotal"
                                android:layout_marginTop="2dp"
                                android:layout_toRightOf="@+id/TvTotal"
                                android:background="@android:color/black"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/viewSignOrNot"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mainLayout"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtCardHolderName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:textColor="#000"
                            android:textSize="16dp" />

                        <RelativeLayout
                            android:id="@+id/pinVerifiedOkView"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_above="@+id/txtCardHolderName">

                            <com.smartpeak.functions.MyTextView
                                android:id="@+id/txtPinVerifiedOk"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:text="PIN VERIFIED OK SIGNATURE NOT REQUIRED"
                                android:textColor="@android:color/black"
                                android:textSize="15dp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ifSignView"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/Ivsignature"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_above="@+id/line"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true" />

                            <View
                                android:id="@+id/line"
                                android:layout_width="150dp"
                                android:layout_height="1dp"
                                android:layout_above="@+id/Tvsigname"
                                android:layout_centerHorizontal="true"
                                android:background="@android:color/black" />

                            <com.smartpeak.functions.MyTextView
                                android:id="@+id/Tvsigname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textSize="15dp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <include
                        android:id="@+id/citiBankReceipt"
                        layout="@layout/receipt_citi_bank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/viewSignOrNot"
                        android:visibility="visible" />

                    <RelativeLayout
                        android:id="@+id/RlAgree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/citiBankReceipt"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp">

                        <com.smartpeak.functions.MyTextView
                            android:id="@+id/TvAgreement1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/AgreementSaleCS"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_10" />
                    </RelativeLayout>

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/tvWhichCopy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/RlAgree"
                        android:layout_centerHorizontal="true"
                        android:text="Merchant Copy"
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_14"
                        android:textStyle="bold" />

                    <com.smartpeak.functions.MyTextView
                        android:id="@+id/tvAppVer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvWhichCopy"
                        android:layout_centerHorizontal="true"
                        android:text="@string/app_verno"
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10" />

                    <com.smartpeak.functions.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvAppVer"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/padding_5"
                        android:text="@string/powered_by_str"
                        android:textColor="@color/header_text"
                        android:textSize="@dimen/font_10" />

                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>