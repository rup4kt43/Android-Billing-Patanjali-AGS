<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="@dimen/padding_10">

    <TextView
        android:id="@+id/txtConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_action_cancel"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/tab"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/padding_45">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center"
            android:singleLine="true"
            android:text="Balance"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_text_size" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/nameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab"
        android:layout_marginLeft="@dimen/padding_15"
        android:layout_marginTop="@dimen/padding_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/padding_140"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:text="Customer Name"
            android:gravity="center"
            android:textColor="@color/header_text"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:text=":"
            android:textColor="@color/header_text"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/EtdName"
            android:layout_width="@dimen/padding_180"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_20"
            android:paddingRight="@dimen/padding_10"
            android:text=""
            android:textColor="@color/header_text"
            android:textColorHint="@color/header_text"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="normal" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ProgramView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameView"
        android:layout_marginLeft="@dimen/padding_15"
        android:layout_marginTop="@dimen/padding_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/padding_140"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:text="Program Type"
            android:textColor="@color/header_text"
            android:gravity="center"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:text=":"
            android:textColor="@color/header_text"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/EtdProgType"
            android:layout_width="@dimen/padding_180"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_20"
            android:text=""
            android:textColor="@color/header_text"
            android:textColorHint="@color/header_text"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/DescView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProgramView"
        android:layout_marginLeft="@dimen/padding_15"
        android:layout_marginTop="@dimen/padding_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/padding_140"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:text="Program Name"
            android:gravity="center"
            android:textColor="@color/header_text"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:text=":"
            android:textColor="@color/header_text"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/editdesc"
            android:layout_width="@dimen/padding_180"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_20"
            android:text=""
            android:textColor="@color/header_text"
            android:textColorHint="@color/header_text"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/VisitView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DescView"
        android:layout_marginLeft="@dimen/padding_15"
        android:layout_marginTop="@dimen/padding_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/padding_140"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:text="Program Visit"
            android:gravity="center"
            android:textColor="@color/header_text"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:text=":"
            android:textColor="@color/header_text"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/editvisit"
            android:layout_width="@dimen/padding_180"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_20"
            android:text=""
            android:textColor="@color/header_text"
            android:textColorHint="@color/header_text"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="normal"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ValueView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/VisitView"
        android:layout_marginLeft="@dimen/padding_15"
        android:layout_marginTop="@dimen/padding_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/padding_140"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:text="Program Value"
            android:gravity="center"
            android:textColor="@color/header_text"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:text=":"
            android:textColor="@color/header_text"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/editvalue"
            android:layout_width="@dimen/padding_180"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_20"
            android:text=""
            android:textColor="@color/header_text"
            android:textColorHint="@color/header_text"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/consumeVisitView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ValueView"
        android:layout_marginLeft="@dimen/padding_15"
        android:layout_marginTop="@dimen/padding_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/padding_140"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:text="Consume Visit"
            android:gravity="center"
            android:textColor="@color/header_text"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:text=":"
            android:textColor="@color/header_text"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/conseditvisit"
            android:layout_width="@dimen/padding_180"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_20"
            android:text=""
            android:textColor="@color/header_text"
            android:textColorHint="@color/header_text"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="normal"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/consumeValueView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/consumeVisitView"
        android:layout_marginLeft="@dimen/padding_15"
        android:layout_marginTop="@dimen/padding_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/padding_140"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:text="Consume Value"
            android:gravity="center"
            android:textColor="@color/header_text"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:text=":"
            android:textColor="@color/header_text"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/consumeeditvalue"
            android:layout_width="@dimen/padding_180"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_10"
            android:paddingLeft="@dimen/padding_20"
            android:text=""
            android:textColor="@color/header_text"
            android:textColorHint="@color/header_text"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="normal" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtmsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab"
        android:layout_marginTop="@dimen/padding_20"
        android:gravity="center"
        android:text="fact"
        android:textSize="18dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtTranId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtmsg"
        android:layout_marginTop="@dimen/padding_20"
        android:gravity="center"
        android:text="lme"
        android:textColor="#000000"
        android:textSize="@dimen/padding_15"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtTranDatetime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTranId"
        android:layout_marginTop="@dimen/padding_20"
        android:gravity="center"
        android:text="abc"
        android:visibility="gone" />


    <LinearLayout
        android:id="@+id/resendsRefundButtonsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ValueView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_15"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FCBD52"
            android:gravity="center"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:text="Done"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:typeface="serif"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>