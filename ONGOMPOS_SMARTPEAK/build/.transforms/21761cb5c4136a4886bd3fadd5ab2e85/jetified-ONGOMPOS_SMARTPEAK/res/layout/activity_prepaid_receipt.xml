<?xml version="1.0" encoding="utf-8"?>
                                                       

    

                 
                                 
                                                     
           

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" android:tag="layout/activity_prepaid_receipt_0" xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftTenDpGuideLine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/padding_10" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightTenDpGuideLine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/padding_10" />

        <include
            android:id="@+id/Ivxyz"
            layout="@layout/receipt_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/padding_5"
            android:src="@drawable/indiatransact1" />

        <com.smartpeak.functions.MyTextView
            android:id="@+id/tvMerchantName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:tag="binding_1"                      
            android:textColor="@color/header_text"
            android:textSize="@dimen/sub_header_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Ivxyz" />

        <com.smartpeak.functions.MyTextView
            android:id="@+id/tvCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/header_text"
            android:textSize="@dimen/sub_header_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMerchantName" />

        <com.smartpeak.functions.MyTextView
            android:id="@+id/tvState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:tag="binding_2"               
            android:textColor="@color/header_text"
            android:textSize="@dimen/sub_header_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCity" />

        <com.smartpeak.functions.MyTextView
            android:id="@+id/tvTransaction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/header_text"
            android:textSize="@dimen/sub_header_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvState" />


        <com.smartpeak.functions.MyTextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_20"
            android:text=""
            android:textColor="@color/header_text"
            android:textSize="@dimen/font_10"
            app:layout_constraintLeft_toLeftOf="@+id/leftTenDpGuideLine"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/tvTransaction" />

        <com.smartpeak.functions.MyTextView
            android:id="@+id/tvTID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/header_text"
            android:textSize="@dimen/font_10"
            app:layout_constraintLeft_toLeftOf="@+id/leftTenDpGuideLine"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/tvDate" />

        <com.smartpeak.functions.MyTextView
            android:id="@+id/tvInvoiceNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/header_text"
            android:textSize="@dimen/font_10"
            app:layout_constraintLeft_toLeftOf="@+id/leftTenDpGuideLine"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/tvTID" />


        <com.smartpeak.functions.MyTextView
            android:id="@+id/tvCardType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/header_text"
            android:textSize="@dimen/font_10"
            app:layout_constraintLeft_toLeftOf="@+id/leftTenDpGuideLine"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/tvInvoiceNo" />

        <com.smartpeak.functions.MyTextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_20"
            android:gravity="end"
            android:text=""
            android:textColor="@color/header_text"
            android:textSize="@dimen/font_10"
            app:layout_constraintLeft_toRightOf="@+id/guideline"
            app:layout_constraintRight_toRightOf="@+id/rightTenDpGuideLine"
            app:layout_constraintTop_toBottomOf="@+id/tvTransaction" />

        <com.smartpeak.functions.MyTextView
            android:id="@+id/tvMID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text=""
            android:textColor="@color/header_text"
            android:textSize="@dimen/font_10"
            app:layout_constraintLeft_toRightOf="@+id/guideline"
            app:layout_constraintRight_toRightOf="@+id/rightTenDpGuideLine"
            app:layout_constraintTop_toBottomOf="@+id/tvTime" />

        <com.smartpeak.functions.MyTextView
            android:id="@+id/tvAuthCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text=""
            android:textColor="@color/header_text"
            android:textSize="@dimen/font_10"
            app:layout_constraintLeft_toRightOf="@+id/guideline"
            app:layout_constraintRight_toRightOf="@+id/rightTenDpGuideLine"
            app:layout_constraintTop_toBottomOf="@+id/tvMID" />

        <com.smartpeak.functions.MyTextView
            android:id="@+id/tvRRN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text=""
            android:textColor="@color/header_text"
            android:textSize="@dimen/font_10"
            app:layout_constraintLeft_toRightOf="@+id/guideline"
            app:layout_constraintRight_toRightOf="@+id/rightTenDpGuideLine"
            app:layout_constraintTop_toBottomOf="@+id/tvAuthCode" />


        <com.smartpeak.functions.MyTextView
            android:id="@+id/tvSwipeOrChip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text=""
            android:textColor="@color/header_text"
            android:textSize="@dimen/font_10"
            android:layout_marginTop="@dimen/padding_5"
            app:layout_constraintLeft_toRightOf="@+id/guideline"
            app:layout_constraintRight_toRightOf="@+id/rightTenDpGuideLine"
            app:layout_constraintTop_toBottomOf="@+id/tvRRN" />

        <com.smartpeak.functions.MyTextView
            android:id="@+id/tvCardNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_15"
            android:text=""
            android:textColor="@color/header_text"
            android:textSize="@dimen/font_10"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSwipeOrChip" />

        <RelativeLayout
            android:id="@id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_10"
            android:background="@color/dim_foreground_disabled_material_dark"
            android:padding="@dimen/padding_15"
            app:layout_constraintTop_toBottomOf="@+id/tvCardNo">


            <com.smartpeak.functions.MyTextView
                android:id="@+id/TvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/receipt_total_amount"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_12" />

            <TextView
                android:id="@+id/Ivrupee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/TvTotal"
                android:layout_marginEnd="@dimen/padding_5"
                android:layout_marginRight="@dimen/padding_5"
                android:layout_toLeftOf="@+id/tvTotalValue"
                android:layout_toStartOf="@+id/tvTotalValue"
                android:text="@string/receipt_text_currency"
                android:textColor="#000"
                android:textSize="@dimen/font_12" />

            <com.smartpeak.functions.MyTextView
                android:id="@+id/tvTotalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/TvTotal"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_12" />


        </RelativeLayout>


        <com.smartpeak.functions.MyTextView
            android:id="@+id/TvAgreement1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_5"
            android:text="@string/AgreementSaleCS"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_10"
            app:layout_constraintBottom_toTopOf="@+id/tvWhichCopy"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <com.smartpeak.functions.MyTextView
            android:id="@+id/tvWhichCopy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvAppVer"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/padding_5"
            android:gravity="center"
            android:text="@string/merchant_copy"
            android:textColor="@color/header_text"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintBottom_toTopOf="@+id/tvAppVer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <com.smartpeak.functions.MyTextView
            android:id="@+id/tvAppVer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_poweredBy"
            android:layout_centerHorizontal="true"
            android:text="@string/app_verno"
            android:textColor="@color/header_text"
            android:textSize="@dimen/font_10"
            app:layout_constraintBottom_toTopOf="@+id/tv_poweredBy"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <com.smartpeak.functions.MyTextView
            android:id="@+id/tv_poweredBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/padding_5"
            android:text="@string/powered_by_str"
            android:textColor="@color/header_text"
            android:textSize="@dimen/font_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         