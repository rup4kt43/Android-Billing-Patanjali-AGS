<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="@dimen/padding_300"
    android:layout_gravity="center">

    <com.smartpeak.functions.MyTextView
        android:id="@+id/hedertv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textColor="@color/header_text"
        android:textSize="@dimen/header_text_size"
        android:layout_margin="@dimen/padding_10"
        android:textStyle="normal"
        android:layout_gravity="center"
        android:text="@string/_confirm_"/>
    <View
        android:id="@+id/bortderView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_2"
        android:layout_below="@+id/hedertv"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="@dimen/padding_20"
        />

    <ImageView
        android:id="@+id/cancelDialogView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_10"
        android:layout_alignParentRight="true"
        android:src ="@drawable/ic_action_cancel" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/bortderView"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_10"

        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/padding_10"
        android:weightSum="2">

        <com.smartpeak.functions.MyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Merchant Name"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_2"
            />
        <com.smartpeak.functions.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            />
        <com.smartpeak.functions.MyTextView
            android:id="@+id/merchant_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:layout_gravity="left"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_marginLeft="@dimen/padding_2"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.smartpeak.functions.MyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Contact No"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_2"
            />
        <com.smartpeak.functions.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            />
        <com.smartpeak.functions.MyTextView
            android:id="@+id/contact_no_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:textColor="@android:color/black"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_marginLeft="@dimen/padding_2"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/padding_10"
        android:weightSum="2">

        <com.smartpeak.functions.MyTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Additional Information"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_2"
            />
        <com.smartpeak.functions.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            />
        <com.smartpeak.functions.MyTextView
            android:id="@+id/addional_information_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:textColor="@android:color/black"
            android:layout_marginRight="@dimen/padding_10"
            android:layout_marginLeft="@dimen/padding_2"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/padding_20"
            android:layout_marginBottom="@dimen/padding_20"
            android:weightSum="2">

            <Button
                android:id="@+id/cancleBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_button_with_dblue_background"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                />

            <Button
                android:id="@+id/submitBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:layout_gravity="center"
                android:text="@string/submit"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_button_with_dblue_background"
                android:layout_marginRight="@dimen/padding_10"
                android:layout_marginLeft="@dimen/padding_10"
                />

        </LinearLayout>



    </LinearLayout>
    </ScrollView>



</RelativeLayout>