<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/footer_height"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/footerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/padding_5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ivIndiatransact"
                android:text="powered by"
                android:textColor="#000"
                android:textSize="@dimen/font_12" />

            <ImageView
                android:id="@+id/ivindusBankLogo"
                android:layout_width="@dimen/padding_100"
                android:layout_height="@dimen/padding_20"
                android:layout_marginRight="@dimen/padding_5"
                android:layout_marginTop="@dimen/padding_5"
                android:background="@drawable/indiatransact_logo" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/Indusand_bank"
                android:textColor="#000"
                android:textSize="@dimen/font_12" />

            <ImageView
                android:id="@+id/ivIndiatransact"
                android:layout_width="@dimen/padding_100"
                android:layout_height="@dimen/padding_20"
                android:layout_below="@+id/tt"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/padding_5"
                android:layout_marginTop="@dimen/padding_5"
                android:background="@drawable/img_indusind_bank_logo" />

        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>