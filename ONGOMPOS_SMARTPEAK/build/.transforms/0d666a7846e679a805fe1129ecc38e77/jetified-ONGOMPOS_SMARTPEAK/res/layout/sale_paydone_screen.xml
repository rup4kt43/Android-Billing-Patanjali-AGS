<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transaction_page_bg">

    <RelativeLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <include
            android:id="@+id/headerView"
            layout="@layout/header_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/titleAndLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerView"
            android:layout_marginTop="@dimen/padding_15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvlogotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:text="Sale"
                android:textColor="@color/header_text"
                android:textSize="@dimen/header_text_size" />


            <RelativeLayout
                android:id="@+id/imgCircleSale"
                android:layout_width="@dimen/padding_100"
                android:layout_height="@dimen/padding_100"
                android:layout_below="@+id/txtSaleTitle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/img_text_gap"
                android:background="@drawable/circle_bg">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="@dimen/padding_50"
                    android:layout_height="@dimen/padding_50"
                    android:layout_centerInParent="true"
                    android:src ="@drawable/sale_transaction_icon" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleAndLogo"
            android:layout_marginTop="@dimen/padding_10"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10"
                android:gravity="center"
                android:text="Payment completed"
                android:textColor="@color/header_text"
                android:textSize="@dimen/sub_header_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_10"
                android:gravity="center"
                android:text="successfully"
                android:textColor="@color/header_text"
                android:textSize="@dimen/sub_header_text_size" />


            <ImageView
                android:id="@+id/ivAuthSucc"
                android:layout_width="@dimen/padding_60"
                android:layout_height="@dimen/padding_70"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_10"
                android:src ="@drawable/new_payment_successful_icon" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivCircle"
                android:layout_marginTop="@dimen/padding_10"
                android:gravity="center"
                android:text="Would you "
                android:textColor="@color/header_text"
                android:textSize="@dimen/sub_header_text_size" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv3"
                android:gravity="center"
                android:text="like a receipt (Optional) "
                android:textColor="@color/header_text"
                android:textSize="@dimen/sub_header_text_size"
                />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView1"
                android:layout_gravity="center_vertical|center"
                android:layout_marginTop="@dimen/padding_10">

                <Button
                    android:id="@+id/btnYes"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_margin="@dimen/padding_10"
                    android:background="@drawable/rounded_button_with_dblue_background"
                    android:text="Yes"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="@dimen/normal_text_size" />

                <Button
                    android:id="@+id/btnNo"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_margin="@dimen/padding_10"
                    android:layout_toRightOf="@+id/btnYes"
                    android:background="@drawable/rounded_button_with_dblue_background"
                    android:text="No"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="@dimen/normal_text_size" />


            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>

