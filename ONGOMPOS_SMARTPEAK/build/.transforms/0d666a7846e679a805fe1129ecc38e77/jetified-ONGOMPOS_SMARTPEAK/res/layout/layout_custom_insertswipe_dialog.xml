<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <View
        android:id="@+id/Vbackground"
        android:layout_width="@dimen/padding_290"
        android:layout_height="@dimen/padding_290"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/padding_20"
        android:background="@drawable/dialog_custome_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.smartpeak.functions.MyTextView
            android:id="@+id/Tvdialogmesssage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Swipe / Insert \nCard..."
            android:gravity="center"
            android:textIsSelectable="false"
            android:textColor="@color/header_text"
            android:textSize="@dimen/header_text_size" />

        <LinearLayout
            android:layout_width="@dimen/padding_180"
            android:layout_height="@dimen/padding_100"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/padding_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/progress_image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:src ="@drawable/progress_swipe_card" />

            <ImageView
                android:id="@+id/progress_image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:src ="@drawable/progress_insert_card"
                android:contentDescription="@string/app_name" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>

