<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Notification Received"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:typeface="serif"
            android:background="#363542"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src ="@drawable/success_icon_black" />

        <TextView
            android:id="@+id/tranRec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Transaction Reversed"
            android:textColor="#000"
            android:textSize="16sp"
            android:typeface="serif" />

        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#000" />

        <TextView
            android:id="@+id/txtAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="4,870.90"
            android:textColor="#000"
            android:textSize="46sp"
            android:typeface="serif"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtBeneficary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="To Big Bazar"
            android:textColor="#000"
            android:textSize="16sp"
            android:typeface="serif"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:text="Close"
            android:typeface="serif"
            android:background="#FCBD52"
            android:textColor="#fff"
            android:textStyle="bold"/>



    </LinearLayout>
</LinearLayout>