<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/headerView"
        layout="@layout/header_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_30">

            <com.smartpeak.functions.MyTextView
                android:id="@+id/txtSaleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headerView"
                android:layout_marginTop="@dimen/padding_20"
                android:gravity="center"
                android:text="@string/account_details"
                android:textColor="@color/header_text"
                android:textSize="@dimen/header_text_size" />
        </TableLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/padding_1"
            android:background="@color/header_text" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <com.smartpeak.functions.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_20"
                android:layout_weight="1"
                android:text="@string/merchant_id"
                android:textColor="@color/header_text"
                android:textSize="@dimen/normal_text_size" />

            <com.smartpeak.functions.MyTextView
                android:id="@+id/mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_20"
                android:layout_weight="2"
                android:textColor="@color/header_text"
                android:textSize="@dimen/normal_text_size" />

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/padding_1"
            android:background="@color/header_text" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <com.smartpeak.functions.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_20"
                android:layout_weight="1"
                android:text="@string/terminal_id"
                android:textColor="@color/header_text"
                android:textSize="@dimen/normal_text_size" />

            <com.smartpeak.functions.MyTextView
                android:id="@+id/tid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_20"
                android:layout_weight="2"
                android:textColor="@color/header_text"
                android:textSize="@dimen/normal_text_size" />

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/padding_1"
            android:background="@color/header_text" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <com.smartpeak.functions.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_20"
                android:layout_weight="1"
                android:text="@string/ower_name"
                android:textColor="@color/header_text"
                android:textSize="@dimen/normal_text_size" />

            <com.smartpeak.functions.MyTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_20"
                android:layout_weight="2"
                android:textColor="@color/header_text"
                android:textSize="@dimen/normal_text_size" />

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/padding_1"
            android:background="@color/header_text" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <com.smartpeak.functions.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_20"
                android:layout_weight="1"
                android:text="@string/address"
                android:textColor="@color/header_text"
                android:textSize="@dimen/normal_text_size" />

            <com.smartpeak.functions.MyTextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_20"
                android:layout_weight="2"
                android:textColor="@color/header_text"
                android:textSize="@dimen/normal_text_size" />

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/padding_1"
            android:background="@color/header_text" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <com.smartpeak.functions.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_20"
                android:layout_weight="1"
                android:text="@string/application_version"
                android:textColor="@color/header_text"
                android:textSize="@dimen/normal_text_size" />

            <com.smartpeak.functions.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_10"
                android:layout_marginTop="@dimen/padding_20"
                android:layout_weight="2"
                android:text="@string/app_verno"
                android:textColor="@color/header_text"
                android:textSize="@dimen/normal_text_size" />

        </TableRow>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/padding_1"
            android:background="@color/header_text" />

    </TableLayout>
</LinearLayout>