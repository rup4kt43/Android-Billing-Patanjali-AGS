<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:padding="@dimen/padding_10"
    android:background="@color/colorWhite"
    >
    <ScrollView
        android:id="@+id/sv_transaction_receipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_with_white_background"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginBottom="@dimen/padding_10"
        android:elevation="@dimen/padding_10"
        android:padding="@dimen/padding_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="@dimen/padding_50"
                android:layout_height="@dimen/padding_50"
                android:paddingTop="@dimen/padding_10"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:src ="@drawable/transaction_batch_summery_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/padding_10"
                android:text="Transactions"
                android:paddingBottom="@dimen/padding_10"
                android:layout_gravity="center"
               />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_80"
                android:visibility="gone"
                android:weightSum="2"
                >

                <ImageView
                    android:id="@+id/iv_partner_logo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_15"

                    android:src ="@drawable/ongo_logo"/>
                <!--  android:contentDescription="@string/splash_img"-->
                <ImageView
                    android:id="@+id/iv_rbl_logo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_15"

                    android:src ="@drawable/logo"/>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:paddingBottom="@dimen/padding_5"
                android:paddingTop="@dimen/padding_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Tran Type"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Count"
                    android:textSize="@dimen/font_12" />
                <TextView
                    android:id="@+id/txt_TranTime"
                    android:layout_width="0dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Tran Amount"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:paddingBottom="@dimen/padding_5"
                android:paddingTop="@dimen/padding_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tran_type1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/count1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/tran_Amount1"
                    android:layout_width="0dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_weight=".35"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:paddingBottom="@dimen/padding_5"
                android:paddingTop="@dimen/padding_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tran_type2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:textSize="@dimen/font_12" />
                <TextView
                    android:id="@+id/count2"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/tran_Amount2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight=".35"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:paddingBottom="@dimen/padding_5"
                android:paddingTop="@dimen/padding_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tranType3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:textSize="@dimen/font_12" />
                <TextView
                    android:id="@+id/count3"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/tranAmount3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight=".35"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:paddingBottom="@dimen/padding_5"
                android:paddingTop="@dimen/padding_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tranType4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/count4"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/tranAmount4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight=".35"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:paddingBottom="@dimen/padding_5"
                android:paddingTop="@dimen/padding_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tranType5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/count5"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/tranAmount5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight=".35"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginRight="@dimen/padding_10"
                android:paddingBottom="@dimen/padding_5"
                android:paddingTop="@dimen/padding_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tranType6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_weight=".25"
                    android:text="Total"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/totalCount"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:id="@+id/totalAmt"
                    android:layout_width="0dp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight=".35"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>


            <com.swipeit2.ClsRippleView
                android:id="@+id/btn_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_30"
                android:layout_marginLeft="@dimen/padding_80"
                android:layout_marginRight="@dimen/padding_80"
                android:layout_marginBottom="@dimen/padding_20"
                android:textSize="@dimen/font_16"
                android:gravity="center"
                android:padding="@dimen/padding_12"
                android:background="@drawable/button_bg"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:visibility="gone"
                android:text="DONE"/>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tv_no_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="@dimen/font_16"
        android:textColor="@color/gray"
        android:visibility="gone"
        android:text="No record found."/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        />

    <ImageView
        android:id="@+id/companyLogo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_22"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/padding_10"
        android:contentDescription="TODO" />
</LinearLayout>