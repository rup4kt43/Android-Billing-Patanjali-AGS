<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/pay_done"
        layout="@layout/sale_paydone_screen"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:visibility="visible"></include>

    <include
        android:id="@+id/receiptdetail"
        layout="@layout/receipt_detail_screen"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"></include>

    <include
        android:id="@+id/footerLayout"
        layout="@layout/footer_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"></include>

    <include
        android:id="@+id/footerLayoutITSL"
        layout="@layout/footer_view_itsl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible"></include>
</RelativeLayout>