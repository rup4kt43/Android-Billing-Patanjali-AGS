<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_50"
        android:gravity="center"
        android:text="@string/str_BQ_header"
        android:textColor="@color/header_text"
        android:textSize="@dimen/font_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/padding_35"
        android:layout_marginRight="@dimen/padding_35"
        android:layout_marginTop="@dimen/padding_50"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_35"
        android:paddingRight="@dimen/padding_35"
        android:visibility="visible">
        <!--android:layout_weight="2.7"-->
        <LinearLayout
            android:id="@+id/ll_static_qr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_55"
            android:layout_marginBottom="@dimen/padding_15"
            android:background="@drawable/rounded_button_with_dblue_background"
            android:elevation="@dimen/padding_1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_2"
            android:paddingTop="@dimen/padding_2"
            android:weightSum="4">

            <!--<ImageView-->
            <!--android:id="@+id/ivPaymentLink"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="@dimen/padding_30"-->
            <!--android:padding="@dimen/padding_2"-->
            <!--android:layout_weight="0.9"-->
            <!--android:src="@drawable/card_link" />-->

            <TextView
                android:id="@+id/tvPaymentLink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/static_qr"
                android:textColor="#fff"
                android:textSize="@dimen/padding_17" />

            <!--<View-->
            <!--android:layout_width="0dip"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="0.6" />-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dynamic_qr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_55"
            android:background="@drawable/rounded_button_with_dblue_background"
            android:elevation="@dimen/padding_1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_2"
            android:paddingTop="@dimen/padding_2"
            android:weightSum="4">

            <!--<ImageView-->
            <!--android:id="@+id/ivTransactionHistory"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="@dimen/padding_size_30"-->
            <!--android:layout_weight="0.9"-->
            <!--android:src="@mipmap/ic_time_white" />-->

            <TextView
                android:id="@+id/tvTransactionHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="center"
                android:text="@string/dynamic_qr"
                android:textColor="#fff"
                android:textSize="@dimen/padding_17" />

            <!--<View-->
            <!--android:layout_width="0dip"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="0.6" />-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_transaction_history"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_55"
            android:layout_marginTop="@dimen/padding_15"
            android:background="@drawable/rounded_button_with_dblue_background"
            android:elevation="@dimen/padding_1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_2"
            android:paddingTop="@dimen/padding_2"
            android:weightSum="4">

            <!--<ImageView-->
            <!--android:id="@+id/ivProfile"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="@dimen/padding_size_30"-->
            <!--android:layout_weight="0.9"-->
            <!--android:src="@mipmap/ic_profile_white" />-->
            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="center"
                android:paddingRight="@dimen/padding_4"
                android:text="@string/transaction_history"
                android:textColor="#fff"
                android:textSize="@dimen/padding_17" />

            <!--<View-->
            <!--android:layout_width="0dip"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="0.6"/>-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_summary_report"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_55"
            android:layout_marginTop="@dimen/padding_15"
            android:background="@drawable/rounded_button_with_dblue_background"
            android:elevation="@dimen/padding_1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_2"
            android:paddingTop="@dimen/padding_2"
            android:weightSum="4">

            <!--<ImageView-->
            <!--android:id="@+id/ivProfile"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="@dimen/padding_size_30"-->
            <!--android:layout_weight="0.9"-->
            <!--android:src="@mipmap/ic_profile_white" />-->
            <TextView
                android:id="@+id/tvSummaryReport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="center"
                android:paddingRight="@dimen/padding_4"
                android:text="@string/summary_report"
                android:textColor="#fff"
                android:textSize="@dimen/padding_17" />

            <!--<View-->
            <!--android:layout_width="0dip"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="0.6"/>-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_transaction_detail_report"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_55"
            android:layout_marginTop="@dimen/padding_15"
            android:background="@drawable/rounded_button_with_dblue_background"
            android:elevation="@dimen/padding_1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_2"
            android:paddingTop="@dimen/padding_2"
            android:weightSum="4">

            <!--<ImageView-->
            <!--android:id="@+id/ivProfile"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="@dimen/padding_size_30"-->
            <!--android:layout_weight="0.9"-->
            <!--android:src="@mipmap/ic_profile_white" />-->
            <TextView
                android:id="@+id/tv_transaction_detail_report"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="center"
                android:paddingRight="@dimen/padding_4"
                android:text="@string/transaction_detail_report"
                android:textColor="#fff"
                android:textSize="@dimen/padding_17" />

            <!--<View-->
            <!--android:layout_width="0dip"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="0.6"/>-->

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_first_row_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_100"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/staticQrClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/padding_100"
                android:layout_height="@dimen/padding_100"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivStaticQr"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/sale" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvStaticQr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5"
                android:gravity="center"
                android:text="Static QR"
                android:textColor="@color/menu_text"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDynamicQr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/padding_100"
                android:layout_height="@dimen/padding_100"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivDynamicQr"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/reverse" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvDynamicQr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_5"
                android:gravity="center"
                android:text="Dynamic QR"
                android:textColor="@color/menu_text"
                android:textSize="@dimen/font_14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_sec_row_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_first_row_menu"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/txnHistoryClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/padding_100"
                android:layout_height="@dimen/padding_100"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivTxnHist"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/reward" />


            </RelativeLayout>

            <TextView
                android:id="@+id/tvTxnHist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_5"
                android:layout_marginTop="@dimen/padding_5"
                android:gravity="center"
                android:text="Transaction History"
                android:textColor="@color/menu_text"
                android:textSize="@dimen/font_14" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>